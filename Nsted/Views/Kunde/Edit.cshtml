@model Nsted.Models.Kunde

<h2>Edit Kunde</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="ID"></label>
        <input asp-for="ID" class="form-control" readonly />
    </div>

    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Fornavn"></label>
        <input asp-for="Fornavn" class="form-control" />
        <label asp-for="Etternavn"></label>
        <input asp-for="Etternavn" class="form-control" />
        <label asp-for="Adresse"></label>
        <input asp-for="Adresse" class="form-control" />
        <label asp-for="Telefon"></label>
        <input asp-for="Telefon" class="form-control" />
        <label asp-for="Epost"></label>
        <input asp-for="Epost" class="form-control" />
    </div>


    <div class="d-flex">
        <button type="submit" class="btn btn-primary">Save</button>

        <button type="button" class="btn btn-danger"
                asp-area=""
                asp-controller="Kunde"
                asp-action="Delete"
                onclick="confirmDelete()">
            Delete
        </button>

        <script>
            function confirmDelete() {
                var confirmResult = confirm("Ønsker du å slette denne kunden?");

                if (confirmResult) {
                    // Brukeren klikket "OK", så du kan gjennomføre sletteoperasjonen
                    // Her kan du legge til koden for sletting eller sende skjemaet
                    // For eksempel:
                    // document.forms["deleteForm"].submit();
                    alert("Kunden er slettet!"); // Dette er bare en ekstra varsling for eksempel
                } else {
                    // Brukeren klikket "Avbryt", ingen handling er nødvendig
                    return view(List);
                }
            }
        </script>
    </div>

</form>