@model Nsted.Models.Service

<h2>Service</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="ID"></label>
        <input asp-for="ID" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Produkttype"></label>
        <input asp-for="Produkttype" class="form-control" />
        <label asp-for="ServiceRep"></label>
        <input asp-for="ServiceRep" class="form-control" />
        <label asp-for="Årsmodell"></label>
        <input asp-for="Årsmodell" class="form-control" />
        <label asp-for="Serienummer"></label>
        <input asp-for="Serienummer" class="form-control" />
        <label asp-for="Notat"></label>
        <input asp-for="Notat" class="form-control" />
        <label>Status:</label>
        <select asp-for="Status" class="form-control" id="statusSelect">
            <option value="Opprettet">Opprettet</option>
            <option value="Påbegynt">Påbegynt</option>
            <option value="Ferdig">Ferdig</option>
        </select>
    </div>

    <br />

    @Html.AntiForgeryToken()
<div class="d-flex">
    <button type="submit" class="btn btn-dark">Save</button>

    <button type="button" class="btn btn-danger"
            asp-area=""
            asp-controller="Service"
            asp-action="Delete"
            onclick="confirmDelete()">
        Delete
    </button>

    <script>function confirmDelete() {
            var confirmResult = confirm("Ønsker du å slette denne servicen?");

            if (confirmResult) {
                // Brukeren klikket "OK", så du kan gjennomføre sletteoperasjonen
                // Her kan du legge til koden for sletting eller sende skjemaet
                // For eksempel:
                // document.forms["deleteForm"].submit();
                alert("Servicen er slettet!"); // Dette er bare en ekstra varsling for eksempel
            } else {
                // Brukeren klikket "Avbryt", ingen handling er nødvendig
            }</script>
</div>

</form>
<button class="btn btn-dark" onclick="window.print()" style="float: right">Skriv ut siden</button>