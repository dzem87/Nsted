@model Nsted.Models.Service

<!--View for å legge til en service-->

<h2>Opprett ny service her </h2>

<!--asp-action add angir metoden som skal håndtere skjemaet.
    Metod post angir http metoden som skal brukes når skjemaet sendes.-->
<form asp-action="Add" method="post">

    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Produkt Type:</label>
        <input asp-for="Produkttype" class="form-control" required />
        <label>Service/Rep: Garanti:</label>
        <input asp-for="ServiceRep" class="form-control" required />
        <label>Årsmodell:</label>
        <input asp-for="Årsmodell" class="form-control" required />
        <label>Serienummer:</label>
        <input asp-for="Serienummer" class="form-control" required />
        <label>Hva er avtalt med kunden?</label>
        <input asp-for="Notat" class="form-control" required />
        <label>KundeID:</label>
        <input asp-for="KundeID" class="form-control" required />
        <label>Status:</label>
        <select asp-for="Status" class="form-control" id="statusSelect">
            <option value="Opprettet">Opprettet</option>
            <option value="Påbegynt" disabled>Påbegynt</option>
            <option value="Ferdig" disabled>Ferdig</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Lagre" class="btn btn-dark" />
    </div>

</form>